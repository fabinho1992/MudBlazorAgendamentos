@page "/medicos"
@inherits IndexMedicosPage

<MudText Typo="Typo.h3">Lista de Médicos</MudText>
<MudButton Color="Color.Info" Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Add"
		   Size="Size.Large" Href="/medicos/create" Class="mt-4 mb-6">Novo Médico</MudButton>

<MudDataGrid Items="@Medicos" SortMode="SortMode.Single" Filterable="false" Groupable="false">
    <Columns>
        <PropertyColumn Property="x => x.Nome"></PropertyColumn>
        <PropertyColumn Property="x => x.Documento"></PropertyColumn>
        <PropertyColumn Property="x => x.Celular"></PropertyColumn>
        <PropertyColumn Property="x => x.Crm" Title="CRM" ></PropertyColumn>
        <PropertyColumn Property="x => x.Especialidade.Nome" Title="Especialidade"></PropertyColumn>
        <TemplateColumn>
            <CellTemplate>
                <MudStack Row>
                    <MudFab Size="Size.Small" Label="Editar" StartIcon="@Icons.Material.Filled.Edit" @onclick="@(() => GoToUpdate(context.Item.Id))" Color="Color.Success" />
                    <MudFab Size="Size.Small" Label="Excluir" StartIcon="@Icons.Material.Filled.Delete" @onclick="@(() => DeleteMedico(context.Item))" Color="Color.Error" />
                </MudStack>
            </CellTemplate>
        </TemplateColumn>
    </Columns>
</MudDataGrid>